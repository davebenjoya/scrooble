<div id="navbarr" >
      <% if user_signed_in? %>
        <div>
          <% if current_page?('/') %>
            <div class="navbar-title">Scrooble</div>
          <% else %>
            <%= link_to "/" do %>
              <div class="navbar-title">Scrooble</div>
            <% end %>
          <% end %>
        </div>
        <div id="navbar-game"></div>
        <div class="nav-item-last">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, crop: :thumb , class: 'avatar dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
           <% if  gravatar_image_url(current_user.email) != "http://gravatar.com/avatar/3314c35d12993a5b2f39e0a5a66536f9" %>
            <%= image_tag gravatar_image_url(current_user.email, size:40), height:40, width:40, class: "avatar dropdown-toggle", id: 'navbarDropdown', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false  %>
          <% else %>
          <!-- if user doesn't have a gravatar, use default image  -->
            <%= image_tag "bear", height:40, width:40, class: "avatar dropdown-toggle", id: 'navbarDropdown', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false  %>
           <% end  %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

          <div class="logged-in-as">
              Logged in as <%= current_user.username %>
          </div>
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item", id: "logout" %>
          </div>
        </div>
      <% else %>
        <div class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
</div>
