<div id="navbarr" >
      <% if user_signed_in? %>
        <div>
          <% if current_page?('/') %>
            <div class="navbar-title">Scrooble</div>
          <% else %>
            <%= link_to "/" do %>
              <div class="navbar-title">Scrooble</div>
            <% end %>
          <% end %>
        </div>
        <div id="navbar-game"></div>
        <div class="nav-item-last">
        <%= image_tag current_user.avatar, crop: :thumb , class: 'avatar dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, 'aria-haspopup': true, 'aria-expanded': false %>


           <!-- <li class="nav-item dropdown"> -->
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <div class="logged-in-as">
              Logged in as <%= current_user.username %>
</div>
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item", id: "logout" %>
          </div>
        <!-- </li> -->


        </div>
      <% else %>
        <div class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
</div>
