<div id="navbarr" >
      <% if user_signed_in? %>
        <div>
          <% if current_page?('/') %>
            <div class="navbar-title">Scrooble</div>
          <% else %>
            <%= link_to "/" do %>
              <div class="navbar-title">Scrooble</div>
            <% end %>
          <% end %>
        </div>
        <div id="navbar-game"></div>
        <div class="nav-item dropdown">
          <%= image_tag "don.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right pl-3" aria-labelledby="navbarDropdown">
            <p>Logged in as <%= current_user.username %> </p>
            <%= link_to "Log out", destroy_user_session_path, method: :delete%>
          </div>
        </div>
      <% else %>
        <div class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
</div>
