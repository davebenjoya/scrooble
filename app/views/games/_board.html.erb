 <div class='board board-hide col-12' id="board" data-animate-out="animate-fade" data-letter-grid="<%= @game.letter_grid %>" data-jokers="<%= @game.jokers %>" >
  <% for i in 0...225  %>
    <% char = "" %>

    <% @letters.each do |letter| %>
      <% if (letter.position == i) %>
        <%#= letter.character %>
        <% char = letter.character %>
      <% end %>
        <%#= char.length %>
     <% end %>

    <div class='tile tile-hide'>
      <div class="letter">
        <%= char %>
      </div>
      <div class="board-value"></div>
    </div>


  <% end %>


</div>
